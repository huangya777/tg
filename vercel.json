{
  "version": 2,
  "builds": [
    {
      "src": "bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    // ✅ 先匹配 public/ 文件（静态资源）
    {
      "src": "/public/(.*)",
      "dest": "/public/$1",
      "check": false
    },
    // ✅ 然后才处理其他请求
    {
      "src": "/(.*)",
      "dest": "bot.py"
    }
  ]
}
